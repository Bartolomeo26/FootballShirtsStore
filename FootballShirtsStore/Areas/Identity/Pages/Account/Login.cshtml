@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

        <main>
            <div class="container mb-5">
                <h1>Login</h1>
                <form id="account" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Input.Email">Email</label>
                        <input class="form-control" asp-for="Input.Email" type="text" id="email" autocomplete="username" aria-required="true" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Email is required!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Input.Password">Password</label>
                        <input class="form-control" asp-for="Input.Password" type="password" id="password" autocomplete="current-password" aria-required="true" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Password is required!
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                    </div>
                 
                    <button id="login-submit" class="btn btn-success mb-3">Login</button>
                    <div class="d-flex justify-content-around">
                <p class="d-inline">
                    <a id="forgot-password" class="link-opacity-50-hover link-underline link-underline-opacity-0 d-inline" asp-page="./ForgotPassword">I've forgotten password</a>
                        </p>
                <p class="d-inline">
                    <a asp-page="./Register" class="link-opacity-50-hover link-underline link-underline-opacity-0 d-inline" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                        </p>
                <p class="d-inline">
                    <a id="resend-confirmation" class="link-opacity-50-hover link-underline link-underline-opacity-0 d-inline" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </div>
        </main>
    </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
